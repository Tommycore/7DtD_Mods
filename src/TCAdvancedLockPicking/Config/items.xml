<?xml version="1.0" encoding="utf-8" ?>

<config>

  <!-- Hide original lockpicks -->
  <append xpath="/items/item[@name='resourceLockPick']">
    <property name="CreativeMode" value="None"/>
  </append>

  <append xpath="/items/item[@name='resourceLockPickBundle']">
    <property name="CreativeMode" value="None"/>
  </append>

  <append xpath="/items">

    <!-- Tier 0: Bobby Pin -->
    <item name="resourceLockPickT0">
      <property name="Extends" value="resourceLockPick" />
      <property name="Material" value="Mmetal_weak"/>
      <property name="Weight" value="1"/>
      <property name="Stacknumber" value="1000"/>
      <property name="EconomicValue" value="1"/>
      <property name="EconomicBundleSize" value="20" />
    </item>

    <!-- Tier 1: Plastic Lock Picks -->
    <item name="resourceLockPickT1">
      <property name="Extends" value="resourceLockPick" />
      <property name="CustomIcon" value="resourceLockPick"/>
      <property name="CustomIconTint" value="93, 184, 230"/>
      <property name="Material" value="Mplastics"/>
      <property name="Weight" value="1"/>
      <property name="Stacknumber" value="50"/>
      <property name="EconomicValue" value="1"/>
      <property name="EconomicBundleSize" value="10" />
      <property name="UnlockedBy" value="craftingWorkstations"/>
    </item>

    <!-- Tier 2: Iron Lock Picks -->
    <item name="resourceLockPickT2">
      <property name="Extends" value="resourceLockPick" />
      <property name="CustomIcon" value="resourceLockPick"/>
      <property name="CustomIconTint" value="191, 170, 156"/>
      <property name="Material" value="Mmetal_medium"/>
      <property name="Weight" value="1"/>
      <property name="Stacknumber" value="50"/>
      <property name="EconomicValue" value="1"/>
      <property name="EconomicBundleSize" value="10" />
      <property name="UnlockedBy" value="craftingWorkstations"/>
    </item>

    <!-- Tier 3: Steel Lock Picks -->
    <item name="resourceLockPickT3">
      <property name="Extends" value="resourceLockPick" />
      <property name="CustomIcon" value="resourceLockPick"/>
      <property name="Material" value="Msteel"/>
      <property name="Weight" value="1"/>
      <property name="Stacknumber" value="50"/>
      <property name="EconomicValue" value="20"/>
      <property name="EconomicBundleSize" value="10" />
      <property name="UnlockedBy" value="craftingWorkstations"/>
    </item>

    <!-- Tier 3 Bundle: Steel Lock Picks -->
    <item name="resourceLockPickT3Bundle">
      <property name="Extends" value="resourceLockPickBundle" />
      <property name="CustomIcon" value="resourceLockPick"/>
      <property name="Material" value="Msteel"/>
      <!-- STK ammobundle -->
      <property name="Weight" value="50"/>
      <property name="EconomicValue" value="1000"/>
      <property name="UnlockedBy" value="perkGreatHeistComplete"/>
      <!-- BOOK_PERK -->
      <property class="Action0">
        <property name="Class" value="OpenBundle"/>
        <property name="Delay" value="0"/>
        <property name="Sound_start" value="close_garbage"/>
        <property name="Create_item" value="resourceLockPickT3"/>
        <property name="Create_item_count" value="50"/>
      </property>
    </item>

    <!-- Tier 4: Pentest Kit -->
    <item name="resourceLockPickT4">
      <property name="Extends" value="resourceLockPick" />
      <property name="Material" value="MstainlessSteel"/>
      <property name="Weight" value="1"/>
      <property name="Stacknumber" value="20"/>
      <property name="EconomicValue" value="10"/>
      <property name="EconomicBundleSize" value="1" />
      <property name="UnlockedBy" value="craftingWorkstations"/>
    </item>

  </append>

</config>
